# Identity files have nonstandard names (.key), so add them
IdentityFile ~/.ssh/id_rsa.key
IdentityFile ~/.ssh/id_ed25519.key

# All hosts should forward the key if needed
Host *
  ForwardAgent yes

#
# Home Network
#

# TrueNAS (on home network)
Host truenas
  # HostName 192.168.50.67
  HostName 73.98.89.95
  Port 27182

#
# Grinnell MathLAN
#

# Match all cs.grinnell.edu hosts, except for the ssh gateway. This causes a loop on my laptop (2024-07-14)
Match host=*.cs.grinnell.edu,!ssh.cs.grinnell.edu
  User heilalmond
  ProxyJump mathlan-gateway

  # Do not remember this host, since they all don't have an IP so are annoying to trust in ssh config
  UserKnownHostsFile=/dev/null
  StrictHostKeyChecking=no

# The SSH gateway
Host mathlan-gateway
  HostName ssh.cs.grinnell.edu
  User heilalmond
  
  # Enable shared connection through a socket in my home directory
  ServerAliveInterval 300
  ControlMaster auto
  ControlPath ~/.ssh/sockets/ssh_mux_%h_%p_%r

#
# Supercomputer Institute
#

Host usrc
  User aheil
  HostName usrc.newmexicoconsortium.org
  ForwardAgent yes

Host vp
  User admin
  HostName 10.15.3.39
  ForwardAgent yes
  ProxyJump usrc

Host cm
  User aheil
  HostName cm.si.usrc
  ForwardAgent yes
  ProxyJump usrc
